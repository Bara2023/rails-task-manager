
<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <div>
        <%= link_to task.title, task_path(task.id) %>
        <%= link_to "edit", edit_task_path(task) %>
        <%= link_to "Delete",
          task_path(task),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
    </li>
  <% end %>
</ul>

<h3>
  <%=link_to "Add a task", tasks_new_path%>
</h3>

